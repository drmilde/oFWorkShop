#include "ofApp.h"

//--------------------------------------------------------------
void ofApp::setup(){
  ofSetWindowShape(1200, 730);
  backImage.load("blue-yellow-linear.png");

}

//--------------------------------------------------------------
void ofApp::update(){
  ofBackground(127);
  angle = (angle+1)%((int)(backImage.getHeight()));
}

//--------------------------------------------------------------
void ofApp::draw(){
  for (int x = 0; x < 1000; x += 32*2) {
    for (int y = 0; y < 600; y += 32*2) {
      ofPushMatrix();
      ofTranslate(x,y);
      ofScale(2.0, 2.0);
      backImage.drawSubsection(0,0, 32, 32, 0,(angle/32)*32);
      ofPopMatrix(); 
    }  
  }
}

